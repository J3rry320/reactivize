body {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
    Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #000;
}

h1 {
  font-size: 42px;
}

.home-page {
  max-width: 960px;
  margin: 0 auto;
  padding: 20px;
  background-color: white;
  border-radius: 5px;
}

.coder-image {
  display: block;
  width: 100%;
  max-width: 300px;
  margin: 0 auto;
}

.package-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  grid-gap: 20px;
}

.package-card {
  padding: 20px;
  background-color: #f9f9f9;
  border-radius: 5px;
}

.package-card a {
  text-decoration: none;
  color: #333;
}

.social-media {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20px;
}

.social-media a {
  color: #333;
  font-size: 24px;
  text-decoration: none;
}
